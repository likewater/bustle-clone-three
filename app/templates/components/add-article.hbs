{{#if addNewArticle}}
<h3>New Article</h3>
<form id="new-article">
  <div class="form-group">
    <label for="title">Article Title:</label>
    {{input value=title id="title" required="required"}}
  </div>
  <div class="form-group">
    <label for="imageURL">Image URL:</label>
    {{input value=imageURL id="imageURL" required="required"}}
  </div>
  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author id="author" required="required"}}
  </div>
  <div class="form-group">
    <label for="date">Date:</label>
    {{input value=date id="date" required="required"}}
  </div>
  <div class="form-group">
    <label for="body">Article Content:</label>
    {{input value=body id="body" required="required"}}
  </div>
  <button {{action 'saveArticle1'}}>Save</button>
</form>
{{else}}
  <button {{action 'showArticleForm'}}>New Article</button>
{{/if}}
